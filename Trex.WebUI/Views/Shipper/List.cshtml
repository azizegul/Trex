@model IEnumerable<Trex.Entity.Models.Shipper>

@{
    ViewData["Title"] = "GetAll";
}
@if (Model.Count() > 0)
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Shipper List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Company Name</th>
                                        <th>Phone</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var shipper in Model.ToList())
                                    {
                                        <tr>
                                            <td>@shipper.Id</td>
                                            <td>@shipper.CompanyName</td>
                                            <td>@shipper.Phone</td>
                                            <td><a href="/shipper/update/@shipper.Id" class="btn btn-info btn-xs"><i class="fas fa-edit"></i></a></td>
                                            <td> <a href="/shipper/delete/@shipper.Id" class="btn btn-danger btn-xs"><i class="fas fa-trash"></i></a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div><!-- /.container-fluid -->
        </div>
    </section>
}

