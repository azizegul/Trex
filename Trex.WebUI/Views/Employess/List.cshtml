@model IEnumerable<Trex.Entity.Models.Employee>

@{
    ViewData["Title"] = "GetAll";
}
@if (Model.Count() > 0)
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Employee List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Title</th>
                                        @*<th>TitleOfCourtesy</th>*@
                                        <th>Birth Date</th>
                                        @*<th>Hire Date</th>*@
                                        @*<td>Street</td>*@
                                        @*<th>City</th>*@
                                        @*<th>Region</th>*@
                                        @*<th>Postal Code</th>*@
                                        <th>Country</th>
                                        @*<th>Phone</th>*@
                                        @*<th>Notes</th>*@
                                        @*<th>ReportsTo</th>*@
                                        <th>TerritoryIds</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.ToList())
                                    {
                                    <tr>
                                        <td>@employee.Id</td>
                                        <td>@employee.FirstName</td>
                                        <td>@employee.LastName</td>
                                        <td>@employee.Title</td>
                                        @*<td>@employee.TitleOfCourtesy</td>*@
                                        <td>@employee.BirthDate</td>
                                        @*<td>@employee.HireDate</td>*@
                                        @*<td>@employee.Address.Street</td>*@
                                        @*<td>@employee.Address.City</td>*@
                                        @*<td>@employee.Address.Region</td>*@
                                        @*<td>@employee.Address.PostalCode</td>*@
                                        <td>@employee.Address.Country</td>
                                        @*<td>@employee.Address.Phone</td>*@
                                        @*<td>@employee.Notes</td>*@
                                        @*<td>@employee.ReportsTo</td>*@
                                        <td>@string.Join(",",employee.TerritoryIds)</td>
                                        <td><a href="/employess/update/@employee.Id" class="btn btn-info btn-xs"><i class="fas fa-edit"></i></a></td>
                                        <td> <a href="/employess/delete/@employee.Id" class="btn btn-danger btn-xs"><i class="fas fa-trash"></i></a></td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div><!-- /.container-fluid -->
        </div>
    </section>
}


