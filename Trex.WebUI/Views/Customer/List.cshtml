@model IEnumerable<Trex.Entity.Models.Customer>
@{
    ViewData["Title"] = "GetAll";
}

@if (Model.Count() > 0)
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Customer List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Company Name</th>
                                        <th>Contact Name</th>
                                        <th>Contact Title</th>
                                        @*<th>Street</th>*@
                                        @*<th>City</th>*@
                                        @*<th>Region</th>*@
                                        @*<th>Postal Code</th>*@
                                        <th>Country</th>
                                        <th>Phone</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var customer in Model.ToList())
                                    {
                                    <tr>
                                        <td>@customer.Id</td>
                                        <td>@customer.CompanyName</td>
                                        <td>@customer.ContactName</td>
                                        <td>@customer.ContactTitle</td>
                                        @*<td>@customer.Address.Street</td>*@
                                        @*<td>@customer.Address.City</td>*@
                                        @*<td>@customer.Address.Region</td>*@
                                        @*<td>@customer.Address.PostalCode</td>*@
                                        <td>@customer.Address.Country</td>
                                        <td>@customer.Address.Phone</td>

                                        <td><a href="/customer/update/@customer.Id" class="btn btn-info btn-xs"><i class="fas fa-edit"></i></a></td>
                                        <td> <a href="/customer/delete/@customer.Id" class="btn btn-danger btn-xs"><i class="fas fa-trash"></i></a></td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div><!-- /.container-fluid -->
        </div>
    </section>
}

