@model IEnumerable<Trex.Entity.Models.Category>

@{
    ViewData["Title"] = "GetAll";
}
@if (Model.Count() > 0)
{
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Category List</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Description</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in Model.ToList())
                                        {
                                            <tr>
                                                <td>@category.Id</td>
                                                <td>@category.Name</td>
                                                <td>@category.Description</td>
                                                <td><a href="/category/update/@category.Id" class="btn btn-info btn-xs"><i class="fas fa-edit"></i></a></td>
                                                <td> <a href="/category/delete/@category.Id" class="btn btn-danger btn-xs"><i class="fas fa-trash"></i></a></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div><!-- /.container-fluid -->
            </div>
        </section>
}



